<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/ble_dialog_background_frame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:text="Bluetooth Dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/ble_tittle"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout">

            <Button
                android:text="NO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bleBtnNo"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"

                 />

            <Button
                android:text="YES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/bleBtnYes"
                android:layout_weight="0.5"

                />

        </LinearLayout>

        <TextView
            android:text="Would you like to continue provisioning with BLE option?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ble_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>