                android:layout_alignLeft="@+id/tab_lan_cloud_labelOne"
                android:paddingBottom="5dp"
                android:text="MAC Address: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
