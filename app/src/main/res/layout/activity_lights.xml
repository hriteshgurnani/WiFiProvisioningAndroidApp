<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBEB">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Lights"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/headerTextView"
        android:layout_marginTop="16dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="Light Name One"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/switchId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/testL"
        android:background="@color/white"
        android:layout_below="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/lan_device_info_box_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/lights_background"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/tab_lan_ssid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tab_lan_macaddress_label"
                android:layout_alignLeft="@+id/tab_lan_macaddress_label"
                android:layout_alignTop="@+id/lan_tab_ssid_textview"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="SSID: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lan_tab_ssid_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_lan_macaddress_label"
                android:layout_toEndOf="@+id/tab_lan_ssid_label"
                android:layout_toRightOf="@+id/tab_lan_ssid_label"
                android:text="No Information"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tab_lan_macaddress_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_lan_cloud_label"
                android:layout_alignStart="@+id/tab_lan_cloud_label"
                android:layout_alignLeft="@+id/tab_lan_cloud_label"
                android:paddingBottom="5dp"
                android:text="MAC Address: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tab_lan_macaddress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tab_lan_macaddress_label"
                android:layout_toEndOf="@+id/tab_lan_macaddress_label"
                android:layout_toRightOf="@+id/tab_lan_macaddress_label"
                android:paddingLeft="3dp"
                android:text="No information"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tab_device_configuration_router_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_lan_ssid_label"
                android:layout_alignStart="@+id/tab_lan_ssid_label"
                android:layout_alignLeft="@+id/tab_lan_ssid_label"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="IP Address: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tab_lan_ipaddress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tab_device_configuration_router_label"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/tab_device_configuration_router_label"
                android:layout_toRightOf="@+id/tab_device_configuration_router_label"
                android:text="No information"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    ----

